import("//mojo/public/tools/bindings/mojom.gni")
import("//build/config/ui.gni")

executable("mojo_shell") {
  deps = [
    ":lib",
    "//base",
    "//mojo/common",
    "//mojo/environment:chromium",
  ]

  if (is_component_build) {
    deps += ["//ui/gl"]
  }

  sources = [
    "desktop/mojo_main.cc"
  ]
}

